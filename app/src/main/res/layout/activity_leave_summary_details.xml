                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="RH"
                                android:textSize="@dimen/text_size_15sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/gothic_regular" />

                        </LinearLayout>

